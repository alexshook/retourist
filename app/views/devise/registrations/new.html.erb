<body background="http://farm3.staticflickr.com/2330/2323976052_e9a0b3d3c8_b.jpg" alt="Kobe port" style="background-size: cover">

<h2>Sign up</h2>

<div class="col-xs-4">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, class: "form-control" %></div><br />

  <div><%= f.label :password %><br />
  <%= f.password_field :password, class: "form-control" %></div><br />

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, class: "form-control" %></div><br />

  <div><%= f.submit "Sign up" %></div>
<% end %>

<br />

<%= render "devise/shared/links" %>
</div>