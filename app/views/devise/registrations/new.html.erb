<body background="http://farm6.staticflickr.com/5285/5284971534_37b56c4eea_o.jpg" alt="Dun Laoghaire Ireland" style="background-size: cover">

<h2>Sign up for Retourist</h2>

<div class="row">

	<div class="col-xs-4">

		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>

		  <h4><%= f.label :email %><br />
		  <%= f.email_field :email, :autofocus => true, class: "form-control" %></h4><br />

		  <h4><%= f.label :password %><br />
		  <%= f.password_field :password, class: "form-control" %></h4><br />

		  <h4><%= f.label :password_confirmation %><br />
		  <%= f.password_field :password_confirmation, class: "form-control" %></h4><br />

		  <div><%= f.submit "Sign up", class: "btn btn-default btn-lg" %></div>
		<% end %>

	</div>

	<br />

	<div id="signup" class="col-lg-6">
			<h3>Already a member?</h4>
			<%= link_to "Log In", new_user_session_path, class: "btn btn-default btn-lg" %>
	</div>

</div>